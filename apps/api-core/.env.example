# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3001

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=migranthub

# Redis (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# Sentry
SENTRY_DSN=

# LLM (OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# MVD Integration (Ban Check)
MVD_ENABLED=false
MVD_API_URL=https://services.fms.gov.ru/info-service.htm?sid=2000
MVD_TIMEOUT=10000
MVD_RETRY_ATTEMPTS=3
MVD_RETRY_DELAY=1000
MVD_CIRCUIT_BREAKER_THRESHOLD=5
MVD_CIRCUIT_BREAKER_RESET_TIME=60000
MVD_CACHE_TTL=3600000

# Patent Check Integration
PATENT_CHECK_ENABLED=false
PATENT_CHECK_SERVICE_URL=https://services.fms.gov.ru/info-service.htm?sid=2000
PATENT_CHECK_TIMEOUT=30000
PATENT_CHECK_RETRY_ATTEMPTS=3
PATENT_CHECK_RETRY_DELAY=2000
PATENT_CHECK_CIRCUIT_BREAKER_THRESHOLD=5
PATENT_CHECK_CIRCUIT_BREAKER_RESET_TIME=60000
PATENT_CHECK_CACHE_TTL=21600000

# 2Captcha Integration
TWO_CAPTCHA_ENABLED=false
TWO_CAPTCHA_API_KEY=
TWO_CAPTCHA_TIMEOUT=120000
TWO_CAPTCHA_POLLING_INTERVAL=5000

# Browser (Playwright) Settings
BROWSER_HEADLESS=true
BROWSER_NAVIGATION_TIMEOUT=30000
BROWSER_SELECTOR_TIMEOUT=10000
